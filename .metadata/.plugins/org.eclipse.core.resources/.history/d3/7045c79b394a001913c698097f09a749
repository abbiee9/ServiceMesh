# student-app-virtualservice.yaml
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: doctor-app-vs-gateway
spec:
  hosts:
  - "*"
  gateways:
  - application-gateway

  http:
  - match:
    - uri:
        prefix: /

    route:
    - destination:
        host: studentservice.student.svc.cluster.local
        port:
         number: 8500