# StudentService-deployment.yaml
apiVersion: apps/v1
kind: Deployment 
metadata:
  name: student-v1
spec:
  replicas: 1 
  selector:  
    matchLabels:  
      app: studentapp
      version: "v1"
  template:  
    metadata: 
      labels:
        app: studentapp
        version: "v1" 
    spec:
      containers: 
      - name: studentapp 
        image: abucontainerregistry.azurecr.io/studentservice:v1 
        ports:
        - containerPort: 8500
          name: https     
        
---
# StudentService-service.yaml
apiVersion: v1
kind: Service
metadata: 
  name: studentservice
  labels: 
    app: studentapp
spec:
  ports:
  - port: 8500
    name: https
  selector: 
    app: studentapp
        